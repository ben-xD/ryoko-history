{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "WebWorker"],
    "module": "ESNext",
    "composite": true,

    "jsx": "react-jsx",
    "noEmit": true,
    "allowImportingTsExtensions": true,

    // Shadcn ui
    "baseUrl": ".",
    "paths": {
      "@/*": ["${configDir}/src/*"]
    }
  },
  "include": ["${configDir}/src"]
}
